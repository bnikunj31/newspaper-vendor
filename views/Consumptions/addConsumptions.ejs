<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add User Form</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="/node_modules/bootstrap/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="/node_modules/select2/dist/css/select2.min.css"
    />
    <!-- Select2 CSS -->
    <style>
      .error {
        color: red;
        font-weight: 500;
        letter-spacing: 2px;
        font-family: sans-serif;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <%- include('../navbar.html') %>

    <div class="container my-5 rounded bg-light p-4">
      <h2>Add Combination</h2>
      <form
        method="post"
        action="/consumptions/add"
        id="combinationForm"
        onsubmit="return validateForm()"
      >
        <!-- Colony (Dropdown with search) -->
        <div class="mb-3">
          <label for="colony" class="form-label">Colony</label>
          <select
            class="form-select select2"
            id="colony"
            name="colony"
            required
          >
            <option value="" selected disabled>Select colony</option>
            <% data.filter(item => item.type ===
            'Colony').forEach(function(colony) { %>
            <option value="<%= colony.id %>">
              <%= colony.name %> (<%= colony.id %>)
            </option>
            <% }) %>
          </select>
          <span id="colonyError" class="error"></span>
        </div>

        <!-- Customer ID (Dropdown with search) -->
        <div class="mb-3">
          <label for="customerId" class="form-label">Customer</label>
          <select
            class="form-select select2"
            id="customerId"
            name="customerId"
            required
          >
            <option value="" selected disabled>Select Customer</option>
            <% data.filter(item => item.type ===
            'Customer').forEach(function(customer) { %>
            <option value="<%= customer.id %>"><%= customer.name %></option>
            <% }) %>
          </select>
          <span id="customerError" class="error"></span>
        </div>

        <!-- Newspaper Code (Dropdown with search) -->
        <div class="mb-3">
          <label for="newspaper" class="form-label">Newspaper</label>
          <select
            class="form-select select2"
            id="newspaperId"
            name="newspaperId"
            required
          >
            <option value="" selected disabled>Select Newspaper</option>
            <% data.filter(item => item.type ===
            'Newspaper').forEach(function(newspaper) { %>
            <option value="<%= newspaper.id %>"><%= newspaper.name %></option>
            <% }) %>
          </select>
          <span id="newspaperError" class="error"></span>
        </div>

        <!-- Days (Dropdown with search) -->
        <div class="mb-3">
          <label for="days" class="form-label">Days</label>
          <select class="form-select select2" id="days" name="days" required>
            <option value="" selected disabled>Select Days</option>
            <% data.filter(item => item.type === 'Days').forEach(function(day) {
            %>
            <option value="<%= day.id %>"><%= day.name %></option>
            <% }) %>
          </select>
          <span id="daysError" class="error"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Add Consumption</button>
      </form>
    </div>

    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/node_modules/select2/dist/js/select2.min.js"></script>
    <script>
      // Initialize Select2 for dropdowns
      $(document).ready(function () {
        $(".select2").select2();
      });

      // Custom form validation
      function validateForm() {
        let isValid = true;

        // Get form fields
        const colony = document.getElementById("colony");
        const customerId = document.getElementById("customerId");
        const newspaperId = document.getElementById("newspaperId");
        const days = document.getElementById("days");

        // Error spans
        const colonyError = document.getElementById("colonyError");
        const customerError = document.getElementById("customerError");
        const newspaperError = document.getElementById("newspaperError");
        const daysError = document.getElementById("daysError");

        // Reset error messages
        colonyError.textContent = "";
        customerError.textContent = "";
        newspaperError.textContent = "";
        daysError.textContent = "";

        // Validate Colony
        if (!colony.value) {
          colonyError.textContent = "Please select a colony.";
          isValid = false;
        }

        // Validate Customer
        if (!customerId.value) {
          customerError.textContent = "Please select a customer.";
          isValid = false;
        }

        // Validate Newspaper
        if (!newspaperId.value) {
          newspaperError.textContent = "Please select a newspaper.";
          isValid = false;
        }

        // Validate Days
        if (!days.value) {
          daysError.textContent = "Please select days.";
          isValid = false;
        }

        // Prevent form submission if any validation fails
        return isValid;
      }
    </script>
  </body>
</html>
