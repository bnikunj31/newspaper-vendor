<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add User Form</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="/node_modules/bootstrap/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="/node_modules/select2/dist/css/select2.min.css"
    />
    <style>
      .error {
        color: red;
        font-weight: 500;
        letter-spacing: 2px;
        font-family: sans-serif;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <%- include('../navbar.html') %>

    <div class="container my-5 rounded bg-light p-4">
      <h2>Generate Single Transactions</h2>
      <form
        method="post"
        action="/transactions/singletransaction"
        onsubmit="return validateForm(); formatDate();"
      >
        <!-- Colony (Dropdown with search) -->
        <div class="mb-3">
          <label for="colony" class="form-label">Colony</label>
          <select
            class="form-select select2"
            id="colony"
            name="colony"
            required
          >
            <option value="" selected disabled>Select colony</option>
            <% data.filter(item => item.type ===
            'Colony').forEach(function(colony) { %>
            <option value="<%= colony.id %>">
              <%= colony.name %> (<%= colony.id %>)
            </option>
            <% }) %>
          </select>
          <span id="colonyError" class="error"></span>
        </div>

        <!-- Customer ID (Dropdown with search) -->
        <div class="mb-3">
          <label for="customerId" class="form-label">Customer</label>
          <select
            class="form-select select2"
            id="customerId"
            name="customerId"
            required
          >
            <option value="" selected disabled>Select Customer</option>
            <% data.filter(item => item.type ===
            'Customer').forEach(function(customer) { %>
            <option value="<%= customer.id %>"><%= customer.name %></option>
            <% }) %>
          </select>
          <span id="customerError" class="error"></span>
        </div>

        <!-- Newspaper Code (Dropdown with search) -->
        <div class="mb-3">
          <label for="newspaperCode" class="form-label">Newspaper</label>
          <select
            class="form-select select2"
            id="newspaperCode"
            name="newspaperCode"
            required
          >
            <option value="" selected disabled>Select Newspaper</option>
            <% data.filter(item => item.type ===
            'Newspaper').forEach(function(newspaper) { %>
            <option value="<%= newspaper.id %>"><%= newspaper.name %></option>
            <% }) %>
          </select>
          <span id="newspaperError" class="error"></span>
        </div>

        <!-- Price -->
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            min="1"
            class="form-control"
            id="price"
            name="price"
            placeholder="Enter price"
            required
          />
          <span id="priceError" class="error"></span>
        </div>

        <!-- Days (Dropdown with search) -->
        <div class="mb-3">
          <label for="days" class="form-label">Days</label>
          <select class="form-select select2" id="days" name="days" required>
            <option value="" selected disabled>Select Days</option>
            <% data.filter(item => item.type === 'Days').forEach(function(day) {
            %>
            <option value="<%= day.id %>"><%= day.name %></option>
            <% }) %>
          </select>
          <span id="daysError" class="error"></span>
        </div>

        <!-- Date (Date input field) -->
        <div class="mb-3">
          <label for="date" class="form-label">Date</label>
          <input
            type="date"
            id="date"
            name="date"
            class="form-control"
            required
          />
          <span id="dateError" class="error"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Add Consumption</button>
      </form>
    </div>

    <script src="/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/node_modules/select2/dist/js/select2.min.js"></script>
    <script>
      $(document).ready(function () {
        $(".select2").select2();
      });

      // Custom validation for form
      function validateForm() {
        let isValid = true;

        // Get form fields
        const colony = document.getElementById("colony");
        const customerId = document.getElementById("customerId");
        const newspaperCode = document.getElementById("newspaperCode");
        const price = document.getElementById("price");
        const days = document.getElementById("days");
        const date = document.getElementById("date");

        // Error spans
        const colonyError = document.getElementById("colonyError");
        const customerError = document.getElementById("customerError");
        const newspaperError = document.getElementById("newspaperError");
        const priceError = document.getElementById("priceError");
        const daysError = document.getElementById("daysError");
        const dateError = document.getElementById("dateError");

        // Reset error messages
        colonyError.textContent = "";
        customerError.textContent = "";
        newspaperError.textContent = "";
        priceError.textContent = "";
        daysError.textContent = "";
        dateError.textContent = "";

        // Validate Colony
        if (colony.value === "" || colony.value === null) {
          colonyError.textContent = "Please select a colony.";
          isValid = false;
        }

        // Validate Customer
        if (customerId.value === "" || customerId.value === null) {
          customerError.textContent = "Please select a customer.";
          isValid = false;
        }

        // Validate Newspaper
        if (newspaperCode.value === "" || newspaperCode.value === null) {
          newspaperError.textContent = "Please select a newspaper.";
          isValid = false;
        }

        // Validate Price
        if (!price.value || price.value <= 0) {
          priceError.textContent = "Please enter a valid price.";
          isValid = false;
        }

        // Validate Days
        if (days.value === "" || days.value === null) {
          daysError.textContent = "Please select days.";
          isValid = false;
        }

        // Validate Date
        if (!date.value) {
          dateError.textContent = "Please select a date.";
          isValid = false;
        }

        // Prevent form submission if validation fails
        return isValid;
      }

      // Format the date to YYYY-MM-DD before submitting the form
      function formatDate() {
        const dateInput = document.getElementById("date");
        const dateValue = new Date(dateInput.value);
        const year = dateValue.getFullYear();
        const month = ("0" + (dateValue.getMonth() + 1)).slice(-2);
        const day = ("0" + dateValue.getDate()).slice(-2);
        dateInput.value = `${year}-${month}-${day}`;
      }
    </script>
  </body>
</html>
