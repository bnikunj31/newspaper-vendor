<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update User Form</title>
    <link
      rel="stylesheet"
      href="/node_modules/bootstrap/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <!-- Navbar -->
    <%- include('../navbar.html') %>

    <div class="container my-5 rounded-3 bg-light p-5">
      <h2>Update User</h2>
      <form method="post" action="/update">
        <!-- ID -->
        <div class="mb-3">
          <input
            type="hidden"
            class="form-control"
            id="id"
            name="id"
            placeholder="Enter name"
            value="<%= data.customerId%>"
            required
          />
        </div>

        <!-- Name -->
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Enter name"
            value="<%= data.customerName %>"
            required
          />
        </div>

        <!-- Contact Number -->
        <div class="mb-3">
          <label for="contactNumber" class="form-label">Contact Number</label>
          <input
            type="tel"
            class="form-control"
            id="contactumber"
            name="contact_number"
            placeholder="Enter contact number"
            value="<%= data.contactNumber %>"
            required
          />
        </div>

        <!-- Address -->
        <div class="mb-3">
          <label for="address" class="form-label">Address</label>
          <input
            type="text"
            class="form-control"
            id="address"
            name="address"
            placeholder="Enter address"
            value="<%= data.address %>"
            required
          />
        </div>

        <!-- Colony (Dropdown populated from database) -->
        <div class="mb-3">
          <label for="colony" class="form-label">Colony</label>
          <select class="form-select" id="colony" name="colony" required>
            <% colonies.forEach(function(colony){ %>
            <option value="<%= colony.colonyName %>" 
              <%= colony.colonyName.trim().toLowerCase() === data.colony.trim().toLowerCase() ? "selected" : "" %>>
              <%= colony.colonyName %></option>
            <% }) %>
          </select>
        </div>

        <!-- Paid -->
        <div class="mb-3">
          <label for="paid" class="form-label">Paid</label>
          <input
            type="number"
            class="form-control"
            id="paid"
            name="paid"
            placeholder="Enter paid amount"
            value="<%= data.paid %>"
          />
        </div>

        <!-- Due -->
        <div class="mb-3">
          <label for="due" class="form-label">Due</label>
          <input
            type="number"
            class="form-control"
            id="due"
            name="due"
            placeholder="Enter due amount"
            value="<%= data.due %>"
            value="0"
          />
        </div>

        <!-- Route -->
        <div class="mb-3">
          <label for="route" class="form-label">Route</label>
          <input
            type="number"
            class="form-control"
            id="route"
            name="route"
            value="<%= data.route %>"
          />
        </div>
        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Update User</button>
      </form>
    </div>

    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
